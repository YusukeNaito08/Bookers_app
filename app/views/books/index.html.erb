<h1>Books</h1>
<% @books.each do |book| %>
<p>Title</p>
<span><%= book.title %></span>
<p>Body</p>
<sapn><%= book.body %></sapn>
<%= link_to('Show', "/books/#{book.id}") %>
<%= link_to('Edit', "/books/#{book.id}/edit") %>
<%= link_to('Destroy',"/books/#{book.id}", method: :delete, "delete-confirm" => "Are you sure?") %>
<% end %>




<h1>New book</h1>
<%= form_with model: @book, local:true do  |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>
<%= f.submit "Create Book"%>
<% end %>

