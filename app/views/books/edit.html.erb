<body></body>
<h1>Edit book</h1>
  <div class= "edit_form">
    <%= form_with model:@book, url:"/books/#{@book.id}",local:true do |f| %>
      <% if @book.errors.any? %>
        <div class="alert-warning">
          <h2><%=@book.errors.count%> error</h2>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
        </div>
       <% end %>
       <p>Title</p>
        <div class="title_area"><%= f.text_field :title %></div>
       <p>Body</p>
        <div class="body_area"><%= f.text_area :body %></div>
        <div class="action"><%= f.submit 'Update Book' %></div>
         <%= link_to 'Show', book_path(@book.id) %>
         <%= link_to 'Back', books_path %>
    <%end%>
  </div>
  